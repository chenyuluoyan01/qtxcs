<script>
import Vue from 'vue'
import Cookies from 'js-cookie';
import md5 from '../../../libs/core/utils/lib/md5str.js'
export default {
  name:'login',
  data: function() {
    return {
      pswOpen:false,
      imgShow:true,
      params:{
        phone:"",
        password:""
      }
    }
  },
  components: {
  },
  mounted: function(){
    this.inputActive()
    this.heightAuto()
  },
  methods:{
    //登录时把token信息放入到用户的localStorage里面
    login: function(){
      let phone = this.params.phone;
      let password = this.params.password;
      if(phone == ''){
        this.$Message.warning('用户名为空！');
        return false
      }else if(password == ''){
        this.$Message.warning('密码为空！');
        return false
      }else{
        Cookies.set('user', phone);
        Cookies.set('password', password);
        //登录这里使用jq 的 ajax 就可以
        let _this = this;
        let data = {
          phone:phone,
          password:password,
          sunnyfix_timestamp: new Date().getTime()
        };
        data.sunnyfix_sign = md5(Api.login,data);
        $.post(Api.login,data,function(res){
          if(res.code == 0){
            localStorage.setItem("token",res.object.token)
            _this.$Message.success('登录成功！');
            Cookies.set('user', phone);
            Cookies.set('password', password);
            _this.$router.push({
                path: 'serverMeg/maintenanceProject'
            });
          }else{
            _this.$Message.warning(res.message||'登录失败！');
          }

        })
      }
    },
    //输入框激活时的交互效果
    inputActive: function(){
      $(".btn-list").each(function(i,item){
      var eachItem = $(".btn-list").eq(i).find(".text-input");
      eachItem.focus(function(){
          $(".blue-border").removeClass("blue-border")
          $(".btn-list").eq(i).addClass("blue-border")
        })
        eachItem.blur(function(){
          $(".blue-border").removeClass("blue-border");
        })
      })
    },
    //左右两边高度自适应
    heightAuto: function(){
      setTimeout(function(){
        $(".login-right").height($(".login-left").height())
      },200)
    },
    goRegister: function(){
      this.$emit("goRegister")
    },
    goForget: function(){
      this.$emit("goForget")
    },
    refresh: function(){
      this.imgShow = false;
      Vue.nextTick(()=>{
        this.imgShow = true;
      })
    }
  }
}
</script>

